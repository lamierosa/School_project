<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".p2.QuestActivity">

    <TextView
            android:text="MyNewApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Hp:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textTV"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.13"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/answersTV"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textTV" android:layout_marginTop="76dp"
            app:layout_constraintHorizontal_bias="0.0" android:textAlignment="center"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/buttonsLL" android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/answersTV" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.122">
    </LinearLayout>
    <Button
            android:text="Выход"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/exitBtn"
            app:layout_constraintTop_toBottomOf="@+id/answersTV" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="180dp" android:layout_marginStart="96dp"/>
    <Button
            android:text="К началу"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/resBtn"
            app:layout_constraintStart_toEndOf="@+id/exitBtn"
            app:layout_constraintTop_toTopOf="@+id/exitBtn"
            android:layout_marginStart="44dp"/>
    <TextView
            android:text="San:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textTV"
            android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="@+id/textTV"/>
    <TextView
            android:text="Coins:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/textView3"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/hpTV"
            app:layout_constraintStart_toEndOf="@+id/textTV" android:layout_marginStart="56dp"
            app:layout_constraintTop_toTopOf="@+id/textTV"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sanTV"
            app:layout_constraintTop_toTopOf="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/hpTV"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/coinsTV"
            app:layout_constraintTop_toTopOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/sanTV"/>
</androidx.constraintlayout.widget.ConstraintLayout>